client: <%= @client %>
tree: <%= @tree %>

xdev: true
index: gzip
image-default: %Y%m%d

rsh: ssh -oStrictHostKeyChecking=no -i<%= scope.lookupvar('::dirvish::backup_location') %>/ssh/dirvish_key

<% if preclient -%>
pre-client: /etc/dirvish_pre_client

<% end -%>
expire-rule:
  mday { 1 } +6 months

expire-default: +30 days

<% unless @excludes.empty? -%>
exclude:
  <%= @excludes.join("\n  ") %>
<% end -%>
